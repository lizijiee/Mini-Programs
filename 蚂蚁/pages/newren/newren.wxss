/* pages/newren/newren.wxss */
.woap {
  width: 100vw;
  position: relative;
  height: 125vh;
}

.fans {
  z-index: 1;
  width: 22rpx;
  height: 32rpx;
  transform: rotate(180deg);
}

.ima {
  width: 50rpx;
  height: 50rpx;
  position: relative;
  top: 105rpx;
  left: 40rpx;
}

.back {
  width: 100vw;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
}

.main {
  /* width: 80%; */
  position: absolute;
  bottom: 5vh;
  width: 100%;
  font-size: 27rpx;
  /* display: flex;
  align-items: center;
  justify-content: space-between; */
}

.main .left {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 77%;
  margin: 0 auto;
  margin-bottom: 25rpx;
}

.left image {
  width: 110rpx;
  height: 110rpx;
  line-height: 130rpx;
  border-radius: 50%;
  display: block;
  text-align: center;
  font-size: 30rpx;
  font-weight: 600;
  letter-spacing: 10rpx;
  font-family: SimHei;
  margin: 0 auto;
  margin-bottom: 8rpx;
}

.left image:nth-child(2) {
  margin-left: 50rpx;
}
.main .right {
  display: flex;
  align-items: center;
  justify-content: space-around;
  width: 77%;
  margin: 0 auto;
}
/* .right {
  margin-left: 40rpx;
} */

.right image {
  width: 110rpx;
  height: 110rpx;
  line-height: 130rpx;
  border-radius: 50%;
  display: block;
  text-align: center;
  font-size: 30rpx;
  font-weight: 600;
  letter-spacing: 10rpx;
  font-family: SimHei;
  margin-bottom: 8rpx;
}

.right image:nth-child(2) {
  margin-left: 20rpx;
}