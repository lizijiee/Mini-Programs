<wxs src="../../../utils/filter.wxs" module="filter" />
<van-tabs active="{{ active }}" bind:change="onChange">
  <van-tab title="待付款">
    <view class="woap" wx:if="{{!show}}">
      <scroll-view scroll-y class="{{show?'':'src'}}">
        <view class="joinlessonlist">
          <view class="eve" wx:for="{{scrtop}}" wx:key='index' bindtap="deta" data-id="{{item.mylessonid}}">
            <view class="ae">
              <view class="left">
                <image src="{{filter.url(item.course_pic)}}"></image>
              </view>
              <view class="right">
                <view class="top">
                  <text>{{item.course_name}}</text>
                  <view>距离: <text>{{item.distance}}</text>KM</view>
                </view>
                <view class="place">{{item.lesson_place}}</view>
                <!-- <view class="time">{{item.lessontime?item.lessontime:'暂定'}}</view> -->
                <view class="time">
                  <text>{{filter.selectYear(item.lessontime)}}</text>
                  <image src="../../../image/icon/time.png"></image>
                  <text>{{filter.selectTime(item.lessontime)}}</text>
                </view>
                <view class="botom">
                  <text>{{item.course_age}}</text>
                </view>
              </view>
            </view>

          </view>
        </view>
      </scroll-view>
      <view class="joinlessonlist">
        <view class="eve" wx:for="{{list}}" wx:key='index' wx:if="{{item.is_baoming == 0}}">
          <view class="ae">
            <view class="left">
              <image src="{{filter.url(item.course_pic)}}"></image>
            </view>
            <view class="right">
              <view class="top">
                <text>{{item.course_name}}</text>
                <!-- <view>距离: <text>{{item.distance}}</text>KM</view> -->
              </view>
              <view class="place">{{item.lesson_place}}</view>
              <!-- <view class="time">{{item.lessontime?item.lessontime:'暂定'}}</view> -->
              <view class="time">
                <text>{{item.lessontime?filter.selectYear(item.lessontime):''}}</text>
                <image src="../../../image/icon/time.png"></image>
                <text>{{item.lessontime?filter.selectTime(item.lessontime):''}}</text>
                <text class="price">￥{{item.order_paid_in_total}}</text>
              </view>
              <view class="botom">
                <view class="dfk" bindtap='qux' data-item="{{item}}">取消订单</view>
                <view class="dfk" bindtap="submit" data-item="{{item}}">立即支付</view>
              </view>
            </view>
          </view>
        </view>
        <view class="eve" wx:for="{{list}}" wx:key='index' wx:if="{{item.is_baoming == 1}}">
          <view class="ae">
            <view class="left">
              <image src="{{filter.url(item.course_pic)}}"></image>
            </view>
            <view class="right">
              <view class="top">
                <text>{{item.course_name}}</text>
                <!-- <view>距离: <text>{{item.distance}}</text>KM</view> -->
              </view>
              <view class="place">{{item.lesson_place}}</view>
              <!-- <view class="time">{{item.lessontime?item.lessontime:'暂定'}}</view> -->
              <view class="time">
                <text>{{item.addtime?filter.selectYear(item.addtime):''}}</text>
                <image src="../../../image/icon/time.png"></image>
                <text>{{item.addtime?filter.selectTime(item.addtime):''}}</text>
                <text class="price">￥{{item.order_paid_in_total}}</text>
              </view>
              <view class="botom">
                <view class="dfk" bindtap='qux' data-item="{{item}}">取消订单</view>
                <view class="dfk" bindtap="submit" data-item="{{item}}">立即支付</view>
              </view>
            </view>
          </view>
        </view>
      </view>
